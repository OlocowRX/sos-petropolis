<div class="container col-sm-6 col-md-6 col-lg-4  form-container">
  <div class="login">
    <h2>Esqueceu sua senha?</h2>
  </div>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Enviar instruções para nova senha", class: "btn-cadastro btn btn-primary" %>
  </div>
<% end %>

  <div class="p-layout-form">
    <p>Caso já tenha um cadastro clique em <%= render "devise/shared/links"%></p>
  </div>
</div>
