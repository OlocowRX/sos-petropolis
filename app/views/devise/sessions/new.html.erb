

<div class="container col-sm-6 col-md-6 col-lg-4 form-container py-2">
  <div class="login">
    <h2>Log in</h2>
  </div>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, label: "Lembrar",  as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: "btn-login btn btn-primary" %>
    </div>
  <% end %>

  <div class="p-layout-form">
    <p>Se você ainda não é cadastrado <%= render "devise/shared/links" %></p>
  </div>

</div>
