<div class="container col-sm-6 col-md-6 col-lg-4  form-container">
  <div class="login">

  <div class="mb-4"><h1 >Faça uma nova doação</h1></div>
  </div>
  <%= simple_form_for [@campaign, @donation] do |f| %>
    <%= f.input :donation_type, label:"Tipo de doação", :placeholder => 'Dinheiro, Comida ou roupa' %>
    <%= f.input :observation, label: "Observação" %>
    <%= f.button :submit, "Doar", class: 'btn-cadastro btn btn-primary' %>
  <% end %>
</div>
